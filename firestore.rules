rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Only authenticated users can read/write inventory
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    // Only authenticated users can read/write sales
    match /sales/{saleId} {
      allow read, write: if request.auth != null;
    }
    
    // Only authenticated users can read/write returns
    match /returns/{returnId} {
      allow read, write: if request.auth != null;
    }
    
    // Only authenticated users can read/write locations
    match /locations/{locationId} {
      allow read, write: if request.auth != null;
    }
    
    // Counters for invoice numbers
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
    
    // Only authenticated users can read/write customer data
    match /customer_data/{orderId} {
      allow read, write: if request.auth != null;
    }
  }
}